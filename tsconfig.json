{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "paths": {
      "@kristoffer.is/core": ["./packages/core/src"],
      "@kristoffer.is/shared": ["./packages/shared/src"],
      "@kristoffer.is/writing": ["./packages/writing/src"]
    },
    "removeComments": true,
    "strict": true,
    "target": "esnext"
  },
  "include": ["**/*.ts"],
  "exclude": [
    "node_modules",
    "packages/writing/.cache",
    "packages/writing/public"
  ]
}
